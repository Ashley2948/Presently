<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:colorPrimary">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorAccentLight</item>
        <item name="android:textColorHighlight">@color/colorAccentLight</item>
        <item name="android:colorForeground">@color/backgroundColor</item>
        <item name="android:colorPrimaryDark">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorAccent</item>
        <item name="timelineIcon">@drawable/ic_flower</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="AppTheme.SUNSET" parent="AppTheme">
        <item name="colorPrimaryDark">@color/sunsetLighterTextColor</item>
        <item name="colorAccent">@color/sunsetAndroidWidgetColor</item>
        <item name="android:colorBackground">@color/sunsetBackgroundColor</item>
        <item name="android:colorAccent">@color/sunsetPrimaryColor</item>
        <item name="android:colorPrimary">@color/sunsetToolbarColor</item>
        <item name="android:textColorPrimary">@color/sunsetSecondaryTextColor</item>
        <item name="android:textColorSecondary">@color/sunsetLighterTextColor</item>
        <item name="android:textColorHighlight">@color/sunsetLighterTextColor</item>
        <item name="android:colorForeground">@color/sunsetToolbarItemColor</item>
        <item name="android:statusBarColor">@color/sunsetStatusBarColor</item>
        <item name="android:colorPrimaryDark">@color/sunsetTimelineColor</item>
        <item name="timelineIcon">@drawable/ic_sun_icon</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.MOONLIGHT" parent="AppTheme">
        <item name="colorAccent">@color/moonlightAndroidWidgetColor</item>
        <item name="android:colorBackground">@color/moonlightBackgroundColor</item>
        <item name="android:colorAccent">@color/moonlightMainTextAndButtonColor</item>
        <item name="android:colorPrimary">@color/moonlightToolbarColor</item>
        <item name="android:textColorPrimary">@color/moonlightDateTextEntryScreenTextColor</item>
        <item name="android:textColorSecondary">@color/moonlightHintQuoteTextColor</item>
        <item name="android:textColorHighlight">@color/moonlightHintQuoteTextColor</item>
        <item name="android:colorForeground">@color/moonlightToolbarItemColor</item>
        <item name="android:colorPrimaryDark">@color/moonlightTimelineColor</item>
        <item name="android:statusBarColor">@color/moonlightStatusBarColor</item>
        <item name="timelineIcon">@drawable/ic_moon</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.DAWN" parent="AppTheme">
        <item name="colorAccent">@color/dawnAndroidWidgetColor</item>
        <item name="android:colorBackground">@color/dawnBackgroundColor</item>
        <item name="android:colorAccent">@color/dawnMainTextAndButtonColor</item>
        <item name="android:colorPrimary">@color/dawnToolbarColor</item>
        <item name="android:textColorPrimary">@color/dawnDateTextEntryScreenTextColor</item>
        <item name="android:textColorSecondary">@color/dawnHintQuoteTextColor</item>
        <item name="android:textColorHighlight">@color/dawnHintQuoteTextColor</item>
        <item name="android:colorForeground">@color/dawnToolbarItemColor</item>
        <item name="android:colorPrimaryDark">@color/dawnTimelineColor</item>
        <item name="android:statusBarColor">@color/dawnStatusBarColor</item>
        <item name="timelineIcon">@drawable/ic_sun_icon</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="AppTheme.MIDNIGHT" parent="AppTheme">
        <item name="colorAccent">@color/midnightAndroidWidgetColor</item>
        <item name="android:colorBackground">@color/midnightBackgroundColor</item>
        <item name="android:colorAccent">@color/midnightMainTextAndButtonColor</item>
        <item name="android:colorPrimary">@color/midnightToolbarColor</item>
        <item name="android:textColorPrimary">@color/midnightDateTextEntryScreenTextColor</item>
        <item name="android:textColorSecondary">@color/midnightHintQuoteTextColor</item>
        <item name="android:textColorHighlight">@color/midnightHintQuoteTextColor</item>
        <item name="android:colorForeground">@color/midnightToolbarItemColor</item>
        <item name="android:colorPrimaryDark">@color/midnightTimelineColor</item>
        <item name="android:statusBarColor">@color/midnightStatusBarColor</item>
        <item name="timelineIcon">@drawable/ic_moon</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="AppTheme.IVY" parent="AppTheme">
        <item name="colorAccent">@color/ivyAndroidWidgetColor</item>
        <item name="android:colorBackground">@color/ivyBackgroundColor</item>
        <item name="android:colorAccent">@color/ivyMainTextAndButtonColor</item>
        <item name="android:colorPrimary">@color/ivyToolbarColor</item>
        <item name="android:textColorPrimary">@color/ivyDateTextEntryScreenTextColor</item>
        <item name="android:textColorSecondary">@color/ivyHintQuoteTextColor</item>
        <item name="android:textColorHighlight">@color/ivyHintQuoteTextColor</item>
        <item name="android:colorForeground">@color/ivyToolbarItemColor</item>
        <item name="android:colorPrimaryDark">@color/ivyTimelineColor</item>
        <item name="android:statusBarColor">@color/ivyStatusBarColor</item>
        <item name="timelineIcon">@drawable/ic_flower</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="TextAppearance.Title" parent="android:TextAppearance">
        <item name="android:textSize">36sp</item>
        <item name="fontPath">fonts/value-serif.ttf</item>
    </style>

    <style name="TextAppearance.Date" parent="android:TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="fontPath">fonts/value-serif.ttf</item>
    </style>

    <style name="TextAppearance.SearchDate" parent="android:TextAppearance">
        <item name="fontPath">fonts/value-serif.ttf</item>
    </style>

    <style name="MilestoneDialog" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>
