<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccentLight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorAccent</item>
        <item name="android:textColorHighlight">@color/colorAccentLight</item>
        <item name="timelineIcon">@drawable/ic_flower</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="AppTheme.SUNSET" parent="AppTheme">
        <item name="colorPrimaryDark">@color/sunsetLighterTextColor</item>
        <item name="colorAccent">@color/sunsetAndroidWidgetColor</item>
        <item name="android:colorBackground">@color/sunsetBackgroundColor</item>
        <item name="android:colorAccent">@color/sunsetPrimaryColor</item>
        <item name="android:colorPrimary">@color/sunsetToolbarColor</item>
        <item name="android:textColorPrimary">@color/sunsetSecondaryTextColor</item>
        <item name="android:textColorSecondary">@color/sunsetLighterTextColor</item>
        <item name="android:textColorHighlight">@color/sunsetToolbarItemColor</item>
        <item name="android:statusBarColor">@color/sunsetStatusBarColor</item>
        <item name="timelineIcon">@drawable/ic_sun_icon</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.MOONLIGHT" parent="AppTheme">
        <item name="colorPrimaryDark">@color/moonLighterTextColor</item>
        <item name="colorAccent">@color/moonAndroidWidgetColor</item>
        <item name="android:colorBackground">@color/moonBackgroundColor</item>
        <item name="android:colorAccent">@color/moonPrimaryColor</item>
        <item name="android:colorPrimary">@color/moonToolbarColor</item>
        <item name="android:textColorPrimary">@color/moonSecondaryTextColor</item>
        <item name="android:textColorSecondary">@color/moonLighterTextColor</item>
        <item name="android:textColorHighlight">@color/moonToolbarItemColor</item>
        <item name="android:statusBarColor">@color/moonStatusBarColor</item>
        <item name="timelineIcon">@drawable/ic_moon</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.MIDNIGHT" parent="AppTheme">
        <item name="colorAccent">@color/midnightAndroidWidgetColor</item>
        <item name="colorPrimaryDark">@color/midnightLighterTextColor</item>
        <item name="android:colorBackground">@color/midnightBackgroundColor</item>
        <item name="android:colorAccent">@color/midnightPrimaryColor</item>
        <item name="android:colorPrimary">@color/midnightToolbarColor</item>
        <item name="android:textColorPrimary">@color/midnightSecondaryTextColor</item>
        <item name="android:textColorSecondary">@color/midnightLighterTextColor</item>
        <item name="android:textColorHighlight">@color/midnightToolbarItemColor</item>
        <item name="android:colorPrimaryDark">@color/midnightTimelineColor</item>
        <item name="android:statusBarColor">@color/midnightStatusBarColor</item>
        <item name="timelineIcon">@drawable/ic_moon</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="AppTheme.SUNRISE" parent="AppTheme">
        <item name="colorPrimaryDark">@color/sunriseLighterTextColor</item>
        <item name="colorAccent">@color/sunriseAndroidWidgetColor</item>
        <item name="android:colorBackground">@color/sunriseBackgroundColor</item>
        <item name="android:colorAccent">@color/sunrisePrimaryColor</item>
        <item name="android:colorPrimary">@color/sunriseToolbarColor</item>
        <item name="android:textColorPrimary">@color/sunriseSecondaryTextColor</item>
        <item name="android:textColorHighlight">@color/sunriseToolbarItemColor</item>
        <item name="android:textColorSecondary">@color/sunriseLighterTextColor</item>
        <item name="android:statusBarColor">@color/sunriseStatusBarColor</item>
        <item name="timelineIcon">@drawable/ic_sun_icon</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.DUSTYROSE" parent="AppTheme">
        <item name="colorPrimaryDark">@color/colorAccentLightDustyRose</item>
        <item name="colorAccent">@color/colorAccentDustyRose</item>
        <item name="android:colorBackground">@color/backgroundColorDustyRose</item>
        <item name="android:colorAccent">@color/colorAccentDustyRose</item>
        <item name="android:colorPrimary">@color/colorAccentDustyRose</item>
        <item name="android:textColorHighlight">@color/sunsetToolbarItemColor</item>
        <item name="android:textColorPrimary">@color/colorAccentDustyRose</item>
        <item name="android:textColorSecondary">@color/colorAccentLightDustyRose</item>
        <item name="android:statusBarColor">@color/colorAccentDustyRose</item>
        <item name="timelineIcon">@drawable/ic_presently</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="TextAppearance.Title" parent="android:TextAppearance">
        <item name="android:textSize">36sp</item>
        <item name="fontPath">fonts/value-serif.ttf</item>
    </style>

    <style name="TextAppearance.Date" parent="android:TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="fontPath">fonts/value-serif.ttf</item>
    </style>

    <style name="TextAppearance.SearchDate" parent="android:TextAppearance">
        <item name="fontPath">fonts/value-serif.ttf</item>
    </style>

    <style name="MilestoneDialog" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>
